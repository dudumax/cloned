<!DOCTYPE html>
<html>
  <head>
    <title>Cloned</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% if flash[:notice] %>
    <div class = "notification is-primary global-notification">
       <p class = "notice"> <%= notice %></p>
    </div>
    <% end %>
    
    
    <% if flash[:alert] %>
    <div class = "notification is-danger global-notification">
       <p class = "alert"> <%= alert %></p>
    </div>
    <% end %>
    
    
    <nav  class ="navbar is-info">
      <div class = "navbar-brand">
      
      <%= link_to root_path, class: "navbar-item " do %>
      <h1 class = "title is-5"> Twittttter</h1>
      <% end %>
      <div class = "navbar-burger burger"  data target = "navbarExample">
        <span></span>
        <span></span>
        <span></span>
      </div>
      </div>
      
        <div id = "navbarExmple" class = "navbar-menu">
          <div class = "navbar-end">
            <div class ="field is-grouped">
              <p class = "control">
                <%= link_to "New Tweet", new_tweeet_path, class: "button is-info is-inverted" %>
              </p>
              
            </div>
          </div>
        </div>
      
    </nav>
    
    <%= yield %>
    
    <footer>
    <p> Operating company DIVE INTO CODE</p>
    <p> &#0169 2015-2016 Copyright DIVE INTO CODE Corp.</p>
  </footer>
  
  </body>
</html>
